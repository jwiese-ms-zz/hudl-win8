<common:LayoutAwarePage
    x:Class="HudlRT.Views.VideoPlayerView"
    IsTabStop="false"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:caliburn="using:Caliburn.Micro"
    xmlns:common="using:HudlRT.Common"
    xmlns:ic="using:HudlRT.Views"
    xmlns:mmppf="using:Microsoft.PlayerFramework"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid.Background>
            <ImageBrush x:Name="backgroundGrid" ImageSource="ms-appx:///Assets/light_BG_Tiled.png" />
        </Grid.Background>
        <!--For snapped view-->
        <StackPanel x:Name="SnappedImage" Grid.RowSpan="3" VerticalAlignment="Center"  Visibility="Collapsed" Background="{StaticResource HudlOrange}">
            <Image Source="ms-appx:///Assets/Hudl_Metro150 Centered.png" Height="150" Width="150" />
            <Image Source="ms-appx:///Assets/agile-hudl-text-dark.png" Width="250"/>
        </StackPanel>

        <Grid x:Name="mainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="525" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Name="header">
                <Button x:Name="GoBack" Style="{StaticResource BackButtonStyle}" Margin="10,0,0,6" />
                <Image Grid.Column="1" Source="Assets/Hudl_logo.jpg" HorizontalAlignment="Left" />
                <TextBlock x:Name="CutupName" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28"/>
            </Grid>
            <Grid Grid.Row="1" x:Name="Container1">
                <Grid Background="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid x:Name="Container2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <StackPanel x:Name="TransportControlsPanel_Left" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button x:Name="btnPlay" Click="btnPlay_Click" Style="{StaticResource PlayAppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}" FontSize="30"/>
                            <Button x:Name="btnPause" Click="btnPause_Click" Style="{StaticResource PauseAppBarButtonStyle}"
                                    Visibility="Collapsed" Foreground="{StaticResource HudlLightBlue}" FontSize="30"/>
                            <Button x:Name="btnStop" Click="btnStop_Click" Style="{StaticResource AppBarButtonStyle}"
                                    AutomationProperties.Name="Stop" Foreground="{StaticResource HudlLightBlue}" Content="&#xE20D;" FontSize="30"/>
                            <Button x:Name="btnReverse" Click="btnReverse_Click" Style="{StaticResource SkipBackAppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}" FontSize="30"
                                    caliburn:Message.Attach="[Event Click] = [PreviousClip($eventArgs)]"/>
                            <Button x:Name="btnSlowReverse" Click="btnSlowReverse_Click" Style="{StaticResource AppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}" 
                                    Content="&#xE016;" FontSize="30"/>
                            <Button x:Name="btnFastReverse" Click="btnFastReverse_Click" Style="{StaticResource AppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}"
                                    Content="&#xE102;&#xE102;" VerticalAlignment="Center" FontSize="20">
                                <Button.Projection>
                                    <PlaneProjection RotationY="180"/>
                                </Button.Projection>
                            </Button>
                        </StackPanel>
                        <!--<Canvas Grid.Column="1" HorizontalAlignment="Center" Height="500">
                            <Canvas.RenderTransform>
                                <TranslateTransform x:Name="CanvasMover"/>
                            </Canvas.RenderTransform>-->
                        <!--<ContentControl x:Name="videoContainer"
                            KeyUp="VideoContainer_KeyUp"
                            Grid.Column="1"
                            HorizontalContentAlignment="Center" 
                            VerticalContentAlignment="Center" 
                            Height="500"
                            DataContext="{Binding Video}"
                            Margin="0,10,0,0">
                                <mmppf:MediaPlayer x:Name="videoMediaElement" Source="{Binding fileLocation}" IsPlayPauseVisible="False"
                                                   AutoPlay="False"
                                                   MediaOpened="videoElement_MediaOpened"
                                                   MediaEnded="videoMediaElement_MediaEnded"
                                                   MediaFailed="videoMediaElement_MediaFailed"
                                                   IsFullScreen="True"
                                                   AutoHide="False"

                                                   />-->
                        <!--<MediaElement Name="videoMediaElement"
                              MediaOpened="videoElement_MediaOpened" 
                              MediaEnded="videoMediaElement_MediaEnded" 
                              MediaFailed="videoMediaElement_MediaFailed"
                              PosterSource="Assets/Hudl_logo.png"
                              AutoPlay="False" 
                              Source="{Binding fileLocation}"/>-->
                        <!--</ContentControl>
                        </Canvas>-->
                        <!--<Slider Name="timelineSlider" Height="0" Style="{StaticResource SliderStyle}" Visibility="Collapsed"/>-->
                        <StackPanel x:Name="TransportControlsPanel_Right" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2">
                            <Button x:Name="btnFullScreenToggle" Click="btnFullScreenToggle_Click"
                                    Style="{StaticResource AppBarButtonStyle}" AutomationProperties.Name="Full Screen" Foreground="{StaticResource HudlLightBlue}"
                                    Content="&#xE1D9;" FontSize="30"/>
                            <Button Style="{StaticResource HiddenButtonStyle}" />
                            <Button x:Name="btnForward" Click="btnForward_Click" Style="{StaticResource SkipAheadAppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}" FontSize="30"
                                    caliburn:Message.Attach="[Event Click] = [NextClip($eventArgs)]"/>
                            <Button x:Name="btnSlowForward" Click="btnSlowForward_Click" Style="{StaticResource AppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}"
                                    Content="&#xE017;" FontSize="30"/>
                            <Button x:Name="btnFastForward" Click="btnFastForward_Click" Style="{StaticResource AppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}"
                                    Content="&#xE102;&#xE102;" FontSize="20"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
            <Grid x:Name="gridHeaders" Background="{StaticResource BlackToDarkGrayGradient}" Grid.Row="2" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="170" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Play" Style="{StaticResource columnHeaderStyle}"/>
                <TextBlock Grid.Column="1" Text="ODK" Style="{StaticResource columnHeaderStyle}"/>
                <TextBlock Grid.Column="2" Text="Down" Style="{StaticResource columnHeaderStyle}"/>
                <TextBlock Grid.Column="3" Text="Dist" Style="{StaticResource columnHeaderStyle}"/>
                <TextBlock Grid.Column="4" Text="Hash" Style="{StaticResource columnHeaderStyle}"/>
                <TextBlock Grid.Column="5" Text="Yard Ln" Style="{StaticResource columnHeaderStyle}"/>
                <TextBlock Grid.Column="6" Text="Play Type" Style="{StaticResource columnHeaderStyle}"/>
                <TextBlock Grid.Column="7" Text="Quarter" Style="{StaticResource columnHeaderStyle}"/>

            </Grid>

            <ListView x:Name="Clips" Grid.Column="1" IsItemClickEnabled="True" SelectionChanged="VideosList_SelectionChanged" caliburn:Message.Attach="[Event ItemClick] = [ClipSelected($eventArgs)]" ItemContainerStyle="{StaticResource ListViewItemStyle1}" SelectedItem="{Binding SelectedClip}" Grid.Row="3" Background="{StaticResource BlackToWhiteGradient_VideoGrid}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid VerticalAlignment ="Center" Margin ="5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="170" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Margin="1" TextWrapping="NoWrap" VerticalAlignment="Center"
                                Text ="{Binding play}"/>
                            <TextBlock Grid.Column="1" Margin="1" TextWrapping="NoWrap" VerticalAlignment="Center"
                                Text ="{Binding odk}"/>
                            <TextBlock Grid.Column="2" Margin="1" TextWrapping="NoWrap" VerticalAlignment="Center"
                                Text ="{Binding down}"/>
                            <TextBlock Grid.Column="3" Margin="1" TextWrapping="NoWrap" VerticalAlignment="Center"
                                Text ="{Binding dist}"/>
                            <TextBlock Grid.Column="4" Margin="1" TextWrapping="NoWrap" VerticalAlignment="Center"
                                Text ="{Binding hash}"/>
                            <TextBlock Grid.Column="5" Margin="1" TextWrapping="NoWrap" VerticalAlignment="Center"
                                Text ="{Binding yardLn}"/>
                            <TextBlock Grid.Column="6" Margin="1" TextWrapping="NoWrap" VerticalAlignment="Center"
                                Text ="{Binding playType}"/>
                            <TextBlock Grid.Column="7" Margin="1" TextWrapping="NoWrap" VerticalAlignment="Center"
                                Text ="{Binding quarter}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>

        <Grid x:Name="VideoGrid" VerticalAlignment="Top" Margin="0,70,0,0">
            <ContentControl x:Name="videoContainer"
                            KeyUp="VideoContainer_KeyUp"
                            HorizontalContentAlignment="Center" 
                            Height="500"
                            DataContext="{Binding Video}">
                <mmppf:MediaPlayer x:Name="videoMediaElement" Source="{Binding fileLocation}" IsPlayPauseVisible="False"
                                                   AutoPlay="False"
                                                   MediaOpened="videoElement_MediaOpened"
                                                   MediaEnded="videoMediaElement_MediaEnded"
                                                   MediaFailed="videoMediaElement_MediaFailed"
                                                   IsFullScreen="True"
                                                   AutoHide="False"

                                                   />
            </ContentControl>
        </Grid>

        <Grid x:Name="full_mainGrid" Visibility="Collapsed">

            <Grid DataContext="{Binding SelectedClip}" Background="Black" Opacity="0.5" Height="50" Width="Auto" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Margin="10,0,5,0" Foreground="White" FontSize="25">ODK:</TextBlock>
                    <TextBlock Margin="5,0,10,0" Foreground="White" FontSize="25" Text="{Binding odk}" />
                    <TextBlock Margin="10,0,5,0" Foreground="White" FontSize="25">Down:</TextBlock>
                    <TextBlock Margin="5,0,10,0" Foreground="White" FontSize="25" Text="{Binding down}" />
                    <TextBlock Margin="10,0,5,0" Foreground="White" FontSize="25">Dist:</TextBlock>
                    <TextBlock Margin="5,0,10,0" Foreground="White" FontSize="25" Text="{Binding dist}" />
                    <TextBlock Margin="10,0,5,0" Foreground="White" FontSize="25">Yard Ln:</TextBlock>
                    <TextBlock Margin="5,0,10,0" Foreground="White" FontSize="25" Text="{Binding yardLn}" />
                </StackPanel>
            </Grid>

            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0" Orientation="Vertical" Width="150">
                <Button x:Name="full_btnPlay" Click="btnPlay_Click" Style="{StaticResource PlayAppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}" FontSize="30" HorizontalAlignment="Center" AutomationProperties.Name="" />
                <Button x:Name="full_btnPause" Click="btnPause_Click" Style="{StaticResource PauseAppBarButtonStyle}"
                                    Visibility="Collapsed" Foreground="{StaticResource HudlLightBlue}" FontSize="30" HorizontalAlignment="Center" AutomationProperties.Name="" />
                <Button x:Name="full_btnStop" Click="btnStop_Click" Style="{StaticResource AppBarButtonStyle}"
                                    AutomationProperties.Name="" Foreground="{StaticResource HudlLightBlue}" Content="&#xE20D;" FontSize="30" HorizontalAlignment="Center" />
                <Button x:Name="full_btnReverse" Click="btnReverse_Click" Style="{StaticResource SkipBackAppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}" FontSize="30" HorizontalAlignment="Center" AutomationProperties.Name="" />
                <Button x:Name="full_btnSlowReverse" Click="btnSlowReverse_Click" Style="{StaticResource AppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}" 
                                    Content="&#xE016;" FontSize="30" HorizontalAlignment="Center"/>
                <Button x:Name="full_btnFastReverse" Click="btnFastReverse_Click" Style="{StaticResource AppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}"
                                    Content="&#xE102;&#xE102;" VerticalAlignment="Center" FontSize="20" HorizontalAlignment="Center">
                    <Button.Projection>
                        <PlaneProjection RotationY="180"/>
                    </Button.Projection>
                </Button>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,60,0,0" Orientation="Vertical" Width="150">
                <Button x:Name="btnExitFullScreen" Click="btnFullScreenToggle_Click"
                                    Style="{StaticResource AppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}"
                                    Content="&#xE1D8;" FontSize="30" HorizontalAlignment="Center"/>
                <Button Style="{StaticResource HiddenButtonStyle}" />
                <Button x:Name="full_btnForward" Click="btnForward_Click" Style="{StaticResource SkipAheadAppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}" FontSize="30" HorizontalAlignment="Center" AutomationProperties.Name="" />
                <Button x:Name="full_btnSlowForward" Click="btnSlowForward_Click" Style="{StaticResource AppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}"
                                        Content="&#xE017;" FontSize="30" HorizontalAlignment="Center"/>
                <Button x:Name="full_btnFastForward" Click="btnFastForward_Click" Style="{StaticResource AppBarButtonStyle}" Foreground="{StaticResource HudlLightBlue}"
                                        Content="&#xE102;&#xE102;" FontSize="20" HorizontalAlignment="Center"/>
            </StackPanel>

        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="FullScreenLandscape">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SnappedImage" Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Filled">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SnappedImage" Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SnappedImage" Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="mainGrid" Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="full_mainGrid" Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SnappedImage" Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource HudlOrange}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>
