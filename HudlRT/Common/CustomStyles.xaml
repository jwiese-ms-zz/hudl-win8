<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--COLORS!!!!!!-->
    <Color x:Key="HudlOrangeColor">#FF6700</Color>
    <Color x:Key="HudlOrangeColor_Highlight">#FFAF7A</Color>
    <Color x:Key="HudlLightBlueColor">#0099FF</Color>
    <Color x:Key="HudlLightBlueTransparentColor">#AA0099FF</Color>
    <Color x:Key="HudlLightBlueColor_Highlight">#00FFE6</Color>
    <Color x:Key="HudlLightBlueColor_Transparent">#AA0099FF</Color>
    <Color x:Key="HudlLightGrayColor">#E0E0E0</Color>
    <Color x:Key="HudlMediumGrayColor">#AFAFAF</Color>
    <Color x:Key="HudlDarkGrayColor">#333333</Color>
    <Color x:Key="HudlBlackButtonColor">#AA000000</Color>
    <Color x:Key="HudlBlackButtonHoverColor">#AA090909</Color>
    <Color x:Key="HudlGrayButtonColor">#BB777777</Color>
    <Color x:Key="HudlGrayButtonHoverColor">#BB888888</Color>

    <!--BRUSHES!!!!!-->
    <!--Solid-->
    <SolidColorBrush x:Key="HudlOrange" Color="{StaticResource HudlOrangeColor}" />
    <SolidColorBrush x:Key="HudlLightBlue" Color="{StaticResource HudlLightBlueColor}" />
    <SolidColorBrush x:Key="HudlLightBlue_Transparent" Color="{StaticResource HudlLightBlueColor_Transparent}" />
    <SolidColorBrush x:Key="HudlLightGray" Color="{StaticResource HudlLightGrayColor}" />
    <SolidColorBrush x:Key="HudlMediumGray" Color="{StaticResource HudlMediumGrayColor}" />
    <SolidColorBrush x:Key="HudlDarkGray" Color="{StaticResource HudlDarkGrayColor}" />
    <SolidColorBrush x:Key="HudlBlackButton" Color="{StaticResource HudlBlackButtonColor}" />
    <SolidColorBrush x:Key="HudlBlackButtonHover" Color="{StaticResource HudlBlackButtonHoverColor}" />
    <SolidColorBrush x:Key="HudlGrayButton" Color="{StaticResource HudlGrayButtonColor}" />
    <SolidColorBrush x:Key="HudlGrayButtonHover" Color="{StaticResource HudlGrayButtonHoverColor}" />
    
    <!--Gradient-->
    <LinearGradientBrush x:Key="OrangeToOrangeGradient" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Orange" Offset="1" />
        <GradientStop Color="{StaticResource HudlOrangeColor}" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="WhiteToClearGradient" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#22FFFFFF" Offset="1"/>
        <GradientStop Color="#00000000" Offset=".5"/>
    </LinearGradientBrush>

    <!--St-st-st-styles-->
    <!--Naming convention: Page_ItemStyle_Specific (e.g. Section_TextBlockStyle_Cutups). 
    If the style is not related to any one page, omit the page portion while naming the style.-->
    <Style x:Key="ButtonStyle_Standard" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundColor" Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)" To="{ StaticResource HudlBlackButtonHoverColor}"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundColor" Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)" To="{StaticResource HudlLightBlueTransparentColor}"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="DisabledVisualElement" Storyboard.TargetProperty="Opacity" To=".5"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="FocusVisualElement" Storyboard.TargetProperty="Opacity" To="1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid Margin="2">
                            <Border BorderThickness="1" BorderBrush="Black">
                                <Rectangle x:Name="BackgroundColor" >
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="{StaticResource HudlBlackButtonColor}">
                                        </SolidColorBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Border>
                        </Grid>
                        <ContentPresenter
                              x:Name="contentPresenter"
                              Content="{TemplateBinding Content}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              Margin="{TemplateBinding Padding}"/>
                        <Rectangle x:Name="DisabledVisualElement" RadiusX="3" RadiusY="3" Fill="#FF000000" Opacity="0" IsHitTestVisible="false" />
                        <Rectangle x:Name="FocusVisualElement" RadiusX="2" RadiusY="2" Margin="1" Stroke="#FF6DBDD1" StrokeThickness="1" Opacity="0" IsHitTestVisible="false" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

