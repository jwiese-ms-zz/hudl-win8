<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HudlRT.Common">
    
    <DataTemplate x:Key="HubPageGamesTemplate">
        <StackPanel Background="{StaticResource HudlLightGray}" Height="600" Width="300" Orientation="Vertical">
            <Image></Image>

            <Grid Height="100">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock x:Name="Opponent" Text ="{Binding Path= Games[0].opponent}" Grid.Row="0"/>
                <TextBlock x:Name="Date" Text ="{Binding Path= Games[0].DisplayDate}" Grid.Row="1"/>
                <TextBlock x:Name="NumPlaylists" Text="{Binding Path= Games[0].gameId}" HorizontalAlignment="Right" Grid.Row="1"/>
            </Grid>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
