<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HudlRT.Common">

    <DataTemplate x:Key="HubPageLargeGamesTemplate">
        <StackPanel Background="{StaticResource HudlLightGray}" Height="600" Width="300" Orientation="Vertical">
            <Image></Image>
            <Grid Height="100">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock x:Name="Opponent" Text ="{Binding Opponent}" Grid.Row="0"/>
                <TextBlock x:Name="Date" Text ="{Binding Date}" Grid.Row="1"/>
                <TextBlock x:Name="NumPlaylists" Text="{Binding NumPlaylists}" HorizontalAlignment="Right" Grid.Row="1"/>
            </Grid>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="HubPageSmallGamesTemplate">
        <StackPanel Background="{StaticResource HudlLightGray}" Height="295" Width="300" Orientation="Vertical">
            <Image></Image>
            <Grid Height="100">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock x:Name="Opponent" Text ="{Binding Opponent}" Grid.Row="0"/>
                <TextBlock x:Name="Date" Text ="{Binding Date}" Grid.Row="1"/>
                <TextBlock x:Name="NumPlaylists" Text="{Binding NumPlaylists}" HorizontalAlignment="Right" Grid.Row="1"/>
            </Grid>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
